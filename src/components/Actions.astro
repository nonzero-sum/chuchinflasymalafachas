---
import Card from "./Card.astro";
import { getEventData } from "../data/eventData";

const { actions = [] } = getEventData();
---

<section class="max-w-4xl mx-auto my-16 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-stretch auto-rows-fr">
        {
            actions.map((card) => (
                <a
                    href={card.href}
                    class="group block h-full w-full focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2"
                >
                    <Card
                        image={card.image}
                        imageAlt={card.imageAlt}
                        title={card.title}
                        description={card.description}
                    />
                </a>
            ))
        }
    </div>
</section>
