---
import Typewriter from "./Typewriter.astro";
import { getEventData } from "../data/eventData";

const { hero, actions = [] } = getEventData();
---

<section
    id="hero"
    class="hero relative overflow-hidden flex items-center justify-center [&_.section__inner]:max-w-none [&_.section__inner]:p-0"
    style={`
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-color: var(--color-primary);
    `}
>
    <div class="w-full px-6 py-12 md:py-0">
        <div
            class="mx-auto flex w-full max-w-6xl flex-col gap-12 items-center justify-center"
        >
            <div class="space-y-6 text-center max-w-3xl">
                <p
                    class="text-xs uppercase tracking-[0.65em]"
                    style="color: var(--color-secondary); opacity: 0.7;"
                >
                    {hero.tagline}
                </p>
                <h1
                    class="font-display text-[clamp(3.5rem,8vw,6.5rem)] uppercase leading-[0.88] tracking-tight drop-shadow-md"
                    id="hero-heading"
                    data-hero-title={hero.title}
                    style="color: var(--color-background);"
                >
                    <Typewriter
                        text={hero.title}
                        autoStart={true}
                        duration={5}
                    />
                </h1>
                <p
                    class="max-w-2xl text-base leading-relaxed md:text-lg"
                    style="color: var(--color-secondary); opacity: 0.9;"
                >
                    {hero.description}
                </p>
                {
                    actions.length > 0 && (
                        <div class="flex flex-wrap gap-3 pt-2 justify-center">
                            {actions.map((action) => (
                                <a
                                    href={action.href}
                                    class="inline-flex items-center justify-center rounded-full border bg-transparent px-5 py-2 text-sm font-semibold uppercase tracking-[0.2em] transition hover:opacity-100 opacity-85"
                                    style="border-color: var(--color-secondary); color: var(--color-secondary);"
                                >
                                    {action.title}
                                </a>
                            ))}
                        </div>
                    )
                }
            </div>

            <div class="text-center mt-6">
                <p
                    class="text-xs uppercase tracking-[0.45em]"
                    style="color: var(--color-secondary); opacity: 0.7;"
                >
                    {hero.weekday}
                </p>
                <p
                    class="font-display text-4xl uppercase tracking-[0.2em]"
                    style="color: var(--color-background);"
                >
                    {hero.dateDisplay}
                </p>
                <p
                    class="mt-4 text-sm font-semibold uppercase tracking-[0.35em]"
                    style="color: var(--color-secondary); opacity: 0.7;"
                >
                    <a
                        href="https://maps.app.goo.gl/VjYg3eaKzcvtoczF8"
                        class="underline hover:color-secondary"
                    >
                        {hero.location}</a
                    >
                </p>
            </div>
        </div>
    </div>
</section>

<style>
    section {
        min-height: 100vh;
    }
</style>
